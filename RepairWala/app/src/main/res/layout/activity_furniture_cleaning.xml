<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FurnitureCleaning">
    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:background="#69A34F"
        android:paddingTop="20dp">


        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#00FFFFFF"
            android:onClick="Back"
            android:scaleType="fitStart"
            android:src="@drawable/arrow"
            android:tint="#FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="70dp"
            >

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:fontFamily="sans-serif-medium"

                android:paddingTop="10dp"
                android:text="Furniture Cleaning"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textColorHint="#000000"
                android:textSize="19dp"
                />

        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l1"
        android:layout_alignStart="@+id/l1"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="180dp"

                android:layout_below="@+id/l1"
                android:layout_alignStart="@+id/l1"

                >

                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:scaleType="fitXY"

                    android:src="@drawable/fcleaning" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l1"
                android:layout_alignStart="@+id/l1"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingLeft="15dp"
                android:id="@+id/l2"

                >

                <TextView
                    android:padding="3dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="This service is provided by trained and trusted furniture cleaning companies"
                    android:textSize="14dp"
                    android:fontFamily="sans-serif"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:text="•"
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"


                        />

                    <TextView
                    android:layout_marginLeft="3dp"
                    android:text="Dry vacuuming of the furniture article"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"

                    />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:text="•"
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"


                        />

                    <TextView
                        android:layout_marginLeft="3dp"
                    android:text="Srubbing and brushing the furniture with a specialized chemical solution"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"

                    />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:text="•"
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"


                        />

                    <TextView
                        android:layout_marginLeft="3dp"
                    android:text="Wet vacuuming the furniture to remove dirty water stains"
                    android:layout_marginTop="3dp"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"

                    />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout></ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="560dp"
        android:layout_marginRight="4dp"

        android:background="#69A34F"
        android:fadeScrollbars="false"
        android:gravity="center"
        android:text="Continue"
        android:textColor="@android:color/background_light" />
</RelativeLayout>