<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ServiceManProfile"
    android:background="#fafafa"

    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
           >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5sp"
                android:paddingBottom="10sp"
                android:paddingTop="10sp"
                android:background="#fff"
                >

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="10sp"
                        android:layout_marginLeft="80sp"
                         android:layout_marginBottom="10sp"
                        app:srcCompat="@drawable/person" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Repair Wala"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:textColor="#27AAE1"
                    android:textStyle="bold"

                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20sp"
                android:paddingBottom="10sp"
                android:paddingTop="10sp"
                android:background="#fff"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:orientation="vertical"
                    android:background="#fff"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Availability Schedule"
                        android:textSize="18dp"
                        android:textColor="#27AAE1"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monday 09:00 - 02:00"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:layout_marginTop="10sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tuesday 09:00 - 02:00"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:layout_marginTop="10sp"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wednesday 09:00 - 02:00"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:layout_marginTop="10sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thursday 09:00 - 02:00"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:layout_marginTop="10sp"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Friday -"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:layout_marginTop="10sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saturday 09:00 - 02:00"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:layout_marginTop="10sp"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sunday 09:00 - 02:00"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:layout_marginTop="10sp"

                        />
                </LinearLayout>
                </LinearLayout>
           </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <android.support.constraint.ConstraintLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="#ffffff">
            <android.support.design.widget.BottomNavigationView
                android:id="@+id/nav_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:background="?android:attr/windowBackground"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:menu="@menu/bottom_nav" />
        </android.support.constraint.ConstraintLayout>
    </RelativeLayout>

</RelativeLayout>