                    >
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:text="•"
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"


