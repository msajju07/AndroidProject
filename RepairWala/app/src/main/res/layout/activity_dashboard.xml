<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_navigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_navigation"
        app:menu="@menu/activity_navigation_drawer" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l1"
        android:layout_alignStart="@+id/l1"

        android:background="#DFDFDF"
        android:paddingLeft="5dp"

        >

        <LinearLayout
        android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@+id/l1"
                android:layout_alignStart="@+id/l1"
                android:onClick="CleaningClick"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"
                    android:background="#69A34F"
                    android:paddingLeft="15dp">

                    <ImageView

                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/cleaning"

                        android:tint="#FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="#FFFFFF"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cleaning"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="House, Furniture cleaning"
                        android:textSize="15dp" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l3"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@+id/l2"
                android:layout_alignStart="@+id/l2"
                android:layout_marginTop="2dp"
                android:onClick="ElectronicClick"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"
                    android:background="#E8F2A65A"
                    android:paddingLeft="10dp">

                    <ImageView

                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@drawable/electronics"

                        android:tint="#FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="#FFFFFF"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="13dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Electronics"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView


                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Mobile, Tablet, Laptop, Game Console Repair"
                        android:textSize="15dp" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l4"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@+id/l3"
                android:layout_alignStart="@+id/l3"
                android:layout_marginTop="2dp"
                android:onClick="ACClick"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"
                    android:background="#27AAE1"
                    android:paddingLeft="15dp">

                    <ImageView

                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:onClick="ACClick"
                        android:src="@drawable/ac"

                        android:tint="#FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="#FFFFFF"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AC Services"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Soft, deep, dust cleaining..."
                        android:textSize="15dp" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l5"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@+id/l4"
                android:layout_alignStart="@+id/l4"
                android:layout_marginTop="2dp"
                android:onClick="GardeningClick"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"
                    android:background="#4CAF50"
                    android:paddingLeft="15dp">

                    <ImageView

                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/plant"

                        android:tint="#FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="#FFFFFF"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gardening Services"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Maintenance contract, Irrigation services, Planting services"
                        android:textSize="15dp" />


                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/l6"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@+id/l5"
                android:layout_alignStart="@+id/l5"
                android:layout_marginTop="2dp"
                android:onClick="ElectricalClick"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"
                    android:background="#FCB44D"
                    android:paddingLeft="15dp">

                    <ImageView

                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/electrical"

                        android:tint="#FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="#FFFFFF"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Electrical"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wiring, light fixtures, outlets and switches"
                        android:textSize="15dp" />


                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/l7"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@+id/l6"
                android:layout_alignStart="@+id/l6"
                android:layout_marginTop="2dp"
                android:onClick="HApplClick"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"
                    android:background="#37469D"
                    android:paddingLeft="15dp">

                    <ImageView

                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/appliances"

                        android:tint="#FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="#FFFFFF"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="13dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Appliances Installation"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dishwasher, gas cooker, washing machine.."
                        android:textSize="15dp" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l8"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@+id/l7"
                android:layout_alignStart="@+id/l7"
                android:layout_marginTop="2dp"
                android:onClick="HApplReClick"
                android:orientation="horizontal"

                >

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"
                    android:background="#A58E5E"
                    android:paddingLeft="15dp">

                    <ImageView

                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/homeappliances"

                        android:tint="#FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="#FFFFFF"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Home Appliances Repair"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stove, washing machine repairs.."
                        android:textSize="15dp" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l9"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@+id/l8"
                android:layout_alignStart="@+id/l8"
                android:layout_marginTop="2dp"
                android:onClick="PlumbingClick"
                android:orientation="horizontal"

                >

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"
                    android:background="#00BCD4"
                    android:paddingLeft="15dp">

                    <ImageView

                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/plumbing"

                        android:tint="#FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="#FFFFFF"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plumbing"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Leaks, drains, toilets, water heater.."
                        android:textSize="15dp" />


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/l10"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@+id/l9"
                android:layout_alignStart="@+id/l9"
                android:layout_marginTop="2dp"
                android:onClick="PaintClick"

                android:orientation="horizontal"

                >


                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"
                    android:background="#E6BB0C"
                    android:paddingLeft="15dp">

                    <ImageView

                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"

                        android:backgroundTint="#00FFFFFF"
                        android:foregroundTint="#00FFFFFF"
                        android:src="@drawable/paint"
                        android:tint="#E6E6E6" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="#FFFFFF"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="13dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Interior House Painting"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Interior House Painting per room or per unit"
                        android:textSize="15dp" />


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/l11"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@+id/l10"
                android:layout_alignStart="@+id/l10"
                android:layout_marginTop="2dp"
                android:onClick="PestCClick"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"
                    android:background="#77A73F"
                    android:paddingLeft="15dp">

                    <ImageView

                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/pest"

                        android:tint="#FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="#FFFFFF"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pest Control"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bed bugs/fleas, rodents"
                        android:textSize="15dp" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"></LinearLayout>
        </LinearLayout>
    </ScrollView>


</android.support.v4.widget.DrawerLayout>
