<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AcDuctCleaning">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l1"
        android:layout_alignStart="@+id/l1"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="180dp"

                android:layout_below="@+id/l1"
                android:layout_alignStart="@+id/l1"

                >

                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:scaleType="fitXY"

                    android:src="@drawable/acs4" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l1"
                android:layout_alignStart="@+id/l1"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingLeft="15dp"
                android:id="@+id/l2"

                >

                <TextView
                    android:padding="3dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="AC Duct Cleaning Service Includes"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:text="•"
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"


                        />

                    <TextView
                        android:layout_marginLeft="3dp"
                        android:text="Thorough inspection of air ducts"
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:text="•"
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"


                        />

                    <TextView
                        android:padding="3dp"
                        android:text="DRemoval of dirt, debris, and contaminants"
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:text="•"
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"


                        />

                    <TextView
                        android:padding="3dp"
                        android:text="Cleaning and Sanitization of air ducts thorugh Special Duct Cleaning Machines "
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:text="•"
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"


                        />

                    <TextView
                        android:padding="3dp"
                        android:text="Reassembly and clean up"
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"


                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"></LinearLayout>
        </LinearLayout></ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="500dp"

        android:layout_marginRight="4dp"

        android:background="#27AAE1"
        android:fadeScrollbars="false"
        android:gravity="center"
        android:text="Continue"
        android:textColor="@android:color/background_light" />
</RelativeLayout>