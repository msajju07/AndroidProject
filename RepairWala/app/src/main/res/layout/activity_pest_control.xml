<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PestControl">

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:background="#77A73F"
        android:paddingTop="20dp">


        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#00FFFFFF"
            android:onClick="Back"
            android:scaleType="fitStart"
            android:src="@drawable/arrow"
            android:tint="#FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="85dp"
            >

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:fontFamily="sans-serif-medium"

                android:paddingTop="10dp"
                android:text="Pest Control"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textColorHint="#000000"
                android:textSize="19dp"
                />

        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l1"
        android:layout_alignStart="@+id/l1"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="180dp"

                android:layout_below="@+id/l1"
                android:layout_alignStart="@+id/l1"

                >

                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:scaleType="fitXY"

                    android:src="@drawable/pestc" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l1"
                android:layout_alignStart="@+id/l1"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingLeft="15dp"
                android:id="@+id/l2"

                >

                <TextView
                    android:padding="3dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="What does this service include?"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    />

                <TextView
                    android:layout_marginLeft="20dp"
                    android:text="- Inspection of home to determine extend of household pest control issue"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"

                    />
                <TextView
                    android:layout_marginLeft="20dp"

                    android:layout_marginTop="3dp"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="- Placing household pest control treatment in areas attractive to pests"
                    android:textSize="14dp"

                    />
                <TextView
                    android:layout_marginLeft="20dp"

                    android:layout_marginTop="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Household pest control treatment of doors, windows, and home exterior"
                    android:textSize="14dp"

                    />
                <TextView
                    android:layout_marginLeft="20dp"

                    android:layout_marginTop="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Inclusion of pest trap placement, if requested"
                    android:textSize="14dp"

                    />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Note for Spray Treatment:"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"

                    />
                <TextView
                    android:layout_marginLeft="20dp"

                    android:layout_marginTop="3dp"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="- Please remove all the food items and utensils form kitchen cupboard and cabinets and cover properly before the service."
                    android:textSize="14dp"

                    />
                <TextView
                    android:layout_marginLeft="20dp"

                    android:layout_marginTop="3dp"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="- Please remove all clothes from wardrobe if a spray treatment is required for wardrobe too."
                    android:textSize="14dp"

                    />
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="- Once sprayed, the premises should be vacant 3-4 hours. "
                    android:textSize="14dp"

                    />


            </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="90dp"></LinearLayout>
        </LinearLayout></ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="560dp"
        android:layout_marginRight="4dp"

        android:background="#4CAF50"
        android:fadeScrollbars="false"
        android:gravity="center"
        android:text="Continue"
        android:textColor="@android:color/background_light" />
</RelativeLayout>