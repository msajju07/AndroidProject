                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acceptance"
                android:layout_gravity="center"
                android:textColor="#fff"

                android:background="@color/splash"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#fff"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="20sp"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_marginTop="45sp"
                        android:id="@+id/imageView4"
                        android:layout_width="match_parent"
                        android:layout_height="21dp"
                        app:srcCompat="@drawable/capture" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="12sp"

                        app:srcCompat="@drawable/complete" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="20dp"
                        android:layout_height="20dp"

                        android:layout_marginTop="12sp"
                        app:srcCompat="@drawable/nav_history" />
                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="20dp"
                        android:layout_marginTop="12sp"

                        android:layout_height="20dp"
                        app:srcCompat="@drawable/cash" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingLeft="15dp"
                    android:orientation="vertical"
                    android:paddingBottom="15dp"
                    android:background="#fff"
                    >

                    <TextView
                        android:layout_width="395dp"
                        android:layout_height="wrap_content"
                        android:text="Acer Laptop repair                           #1234"
                        android:textSize="16dp"
                        android:textColor="#27AAE1"
                        android:textStyle="bold"


                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Issue - Broken Screen"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:layout_marginTop="10sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Submitted (Waiting Provider's Confirmation)"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:layout_marginTop="10sp"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mon, 30 April 2019 13:00"
                        android:textColor="#000000"
                        android:layout_marginTop="10sp"

                        android:textSize="16dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AED 350.00"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:layout_marginTop="10sp"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tickets"
                        android:textColor="#27AAE1"
                        android:textSize="16dp"
                        android:layout_marginTop="10sp"


                        />


                </LinearLayout>

            </LinearLayout>


