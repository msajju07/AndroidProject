<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#57BBBBBB"
    tools:context=".addDetail">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        android:textSize="14dp"
        android:gravity="center_vertical"
        android:text="Street name:"

        />

    <EditText
        android:id="@+id/street"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt"
        android:background="@android:color/background_light"
        android:hint=""
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="#000000"
        android:textSize="18dp" />


    <TextView
        android:layout_marginTop="10dp"
        android:layout_below="@id/street"
        android:id="@+id/txt2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        android:textSize="14dp"
        android:gravity="center_vertical"
        android:text="Building name:"

        />

    <EditText
        android:layout_below="@id/txt2"
        android:id="@+id/bname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:hint=""
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="#000000"
        android:textSize="18dp" />


    <TextView
        android:layout_marginTop="10dp"
        android:layout_below="@id/bname"
        android:id="@+id/txt3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        android:textSize="14dp"
        android:gravity="center_vertical"
        android:text="Apartment:"

        />

    <EditText
        android:layout_below="@id/txt3"
        android:id="@+id/apart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:hint=""
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="#000000"
        android:textSize="18dp" />


    <TextView
        android:layout_marginTop="10dp"
        android:layout_below="@id/apart"
        android:id="@+id/txt4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        android:textSize="14dp"
        android:gravity="center_vertical"
        android:text="City:"

        />



    <EditText
        android:layout_below="@id/txt4"
        android:id="@+id/city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:hint=""
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="#000000"
        android:textSize="18dp" />


    <TextView
        android:layout_marginTop="10dp"
        android:layout_below="@id/city"
        android:id="@+id/txt5"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        android:textSize="14dp"
        android:gravity="center_vertical"
        android:text="Additional directions:"

        />



    <EditText
        android:layout_below="@id/txt5"
        android:id="@+id/adddire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:hint=""
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="#000000"
        android:textSize="18dp" />


    <Button
        android:onClick="saveAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="500dp"
        android:layout_marginRight="6dp"
        android:background="#27AAE1"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:text="Save"

        />
</RelativeLayout>