<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlumbingService">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l1"
        android:layout_alignStart="@+id/l1"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="180dp"


                android:layout_below="@+id/l1"
                android:layout_alignStart="@+id/l1"

                >


                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:scaleType="fitXY"

                    android:src="@drawable/pl0" />
            </LinearLayout>



            <LinearLayout
                android:paddingTop="4dp"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"
                android:layout_below="@+id/l1"
                android:layout_alignStart="@+id/l1"

                android:id="@+id/l2"

                >



                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"
                    android:background="#6FC3ED"
                    android:paddingLeft="15dp"
                    >


                    <ImageView

                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/pl1"
                        android:tint="#FFFFFF" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="#FFFFFF"
                    android:orientation="vertical"
                    android:paddingTop="30dp"
                    android:paddingLeft="20dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Leaks"
                        android:textSize="18dp"
                        android:textStyle="bold" />


                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:paddingLeft="5dp"

                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"
                android:layout_below="@+id/l2"
                android:layout_alignStart="@+id/l2"
                android:id="@+id/l3"

                >


                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"
                    android:background="#6FC3ED"
                    android:paddingLeft="15dp"
                    >

                    <ImageView

                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/pl2"

                        android:tint="#FFFFFF" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="#FFFFFF"
                    android:orientation="vertical"
                    android:paddingTop="30dp"
                    android:paddingLeft="20dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clogged Drains"
                        android:textSize="18dp"
                        android:textStyle="bold" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="5dp"

                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"
                android:layout_below="@+id/l3"
                android:layout_alignStart="@+id/l3"
                android:id="@+id/l4"

                >


                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"
                    android:background="#6FC3ED"
                    android:paddingLeft="15dp"
                    >

                    <ImageView

                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/pl3"

                        android:tint="#FFFFFF" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="#FFFFFF"
                    android:orientation="vertical"
                    android:paddingTop="30dp"
                    android:paddingLeft="20dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Toilets"
                        android:textSize="18dp"
                        android:textStyle="bold" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="5dp"

                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"
                android:layout_below="@+id/l4"
                android:layout_alignStart="@+id/l4"
                android:id="@+id/l5"

                >


                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"
                    android:background="#6FC3ED"
                    android:paddingLeft="10dp"
                    >

                    <ImageView

                        android:layout_width="70dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:src="@drawable/pl4"

                        android:tint="#FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="#FFFFFF"
                    android:orientation="vertical"
                    android:paddingTop="30dp"
                    android:paddingLeft="20dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Water Heater"
                        android:textSize="18dp"
                        android:textStyle="bold" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="5dp"

                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"
                android:layout_below="@+id/l5"
                android:layout_alignStart="@+id/l5"
                android:id="@+id/l6"

                >


                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"
                    android:background="#6FC3ED"
                    android:paddingLeft="10dp"
                    >

                    <ImageView

                        android:layout_width="70dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:src="@drawable/pl5"

                        android:tint="#FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="#FFFFFF"
                    android:orientation="vertical"
                    android:paddingTop="30dp"
                    android:paddingLeft="20dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Faucets and Shower"
                        android:textSize="18dp"
                        android:textStyle="bold" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="5dp"

                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"
                android:layout_below="@+id/l6"
                android:layout_alignStart="@+id/l6"
                android:id="@+id/l7"

                >


                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"
                    android:background="#6FC3ED"
                    android:paddingLeft="10dp"
                    >

                    <ImageView

                        android:layout_width="70dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:src="@drawable/pl6"

                        android:tint="#FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="#FFFFFF"
                    android:orientation="vertical"
                    android:paddingTop="30dp"
                    android:paddingLeft="20dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Custom job"
                        android:textSize="18dp"
                        android:textStyle="bold" />


                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"></LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>